<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tool_bar_top_height"
        android:layout_gravity="center_horizontal"
        android:background="@color/main_color"
        app:tabMode="scrollable"
        app:tabTextAppearance="@style/TabTextAppearance"
        app:tabBackground="@color/main_color"
        app:tabIndicatorColor="@color/tab_bottom_line_color"
        app:tabSelectedTextColor="@color/tab_text_color"
        app:tabTextColor="@color/tab_text_color_selected"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>


</LinearLayout>