<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WanAndroidKotlin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WanAndroidKotlin" parent="Base.Theme.WanAndroidKotlin" />

    <style name="AppTheme" parent="Theme.WanAndroidKotlin" />

    <style name="TextAppearance.Small.EmptyView" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#4d000000</item>
    </style>

    <style name="TextAppearance.Small.EmptyView.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#B3000000</item>
    </style>

    <style name="TextAppearance.Small.EmptyView.Summary">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="item_footer">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">#44000000</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">2.0dip</item>
    </style>
    <style name="AppTheme.DeepLine" parent="@style/AppTheme">
        <item name="android:background">#ffdddddd</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
    </style>
</resources>